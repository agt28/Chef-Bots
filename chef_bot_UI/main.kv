#:kivy 1.10.1

<MenuButton@Button>:
    markup: True
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (180,70)
    size_hint: (None, None)
    border_radius: [18]
    on_press: app.Pressbtn(self)
    color: rgba(app.chef_bot_black)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_primary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius


<HeaderButton@Button>:
    markup: True
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (80,30)
    size_hint: (None, None)
    border_radius: [18]
    color: rgba(app.chef_bot_secondary)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_secondary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius


<MenuPopup>:
    id: popup_topping
    separator_color: rgba(app.chef_bot_secondary)
    title_color: rgba(app.chef_bot_black)
    
    Button:
        text: 'Yes'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.6}
        on_press: app.ConfirmSel(self)

    Button:
        text: 'No'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.4}
        on_press: app.DeclineSel(self)

<MainWindow>:
    cols: 1
    rows: 3
    GridLayout:
        cols: 2
        size_hint: 1, 0.13
        pos_hint: {'x': 1, 'top': 1}
        canvas:
            Color:
                rgb: rgba(app.chef_bot_black)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Chef Bots'
            color: rgba('FDFFFC')
            pos_hint_x: 0.1
            bold: True
        GridLayout:
            rows: 1
            spacing: 10, 10
            padding: 10, 10
            size_hint: 0.18, 1
            HeaderButton:
                text: 'Exit'
                color: rgba('FDFFFC')
                bold: True
                on_press: app.get_running_app().stop()
        

    GridLayout:
        cols: 3
        padding: 100
        spacing: 30
        pos_hint: {'x': 0.5, 'y': 0.5}
        canvas:
            Color:
                rgb: rgba('FDFFFC')
            Rectangle:
                pos: self.pos
                size: self.size
        MenuButton:
            id: T
            text: 'Tomatoes'
        MenuButton:
            id: L
            text: 'Lettuce'
        MenuButton:
            id: On
            text: 'Onions'
        MenuButton:
            id: C
            text: 'Cheese'
        MenuButton:
            id: P
            text: 'Pickles'
    
    GridLayout:
        rows: 1
        size_hint_y: 0.12
        canvas:
            Color:
                rgb: rgba(app.chef_bot_black)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: app.Status
            color: rgba('FDFFFC')
            pos_hint_x: 0.15
            bold: True
        Label:
            text: ''
            color: rgba('FDFFFC')
            pos_hint_x: 0.4
            bold: True