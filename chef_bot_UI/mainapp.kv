#:kivy 1.10.1
# File
# Menu Items #
#
# Individual items Buttons
<MenuButton@Button>:
    markup: True
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (180,70)
    size_hint: (None, None)
    border_radius: [18]
    color: rgba(app.chef_bot_black)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_primary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

# Greeter Buttons
<MenuButton2@ButtonBehavior+Label>:
    markup: True
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (200,70)
    size_hint: (None, None)
    border_radius: [18]
    font_name: 'Roboto-Regular.ttf'
    color: rgba(app.chef_bot_black)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_primary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
        
# NavBar Buttons
<HeaderButton@Button>:
    markup: True
    background_color: (0,0,0,0)
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (80,30)
    size_hint: (None, None)
    border_radius: [18]
    color: rgba(app.chef_bot_black)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_secondary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<CancelBtn>:
    #enabled: False
    size_hint: None, 0.8
    pos: (300,0)
    width: 200

# Default Popup Button Design
<PopupBtn@Button>:
    markup: True
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    size: (180,70)
    size_hint: (None, None)
    border_radius: [18]
    color: rgba(app.chef_bot_black)
    canvas.before:
        Color:
            rgba: rgba(app.chef_bot_secondary)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

    
# Checkbox - Multi-select
<MenuCheckBox@CheckBox>:
    size: (80,30)
    background_checkbox_normal:'images/Unchecked-checkbox.png'
    background_checkbox_down:'images/Checked-checkbox.png'
    pos_hint_x: 0


# 
<BtnStack@StackLayout>:
    pos: self.parent.pos
    size: self.parent.size
    orientation: 'lr-tb'
    spacing: 10

<MenuLabel@Label>:
    color: 0,0,0,1
    size_hint_x: None
    width: 100
    font_name: 'fonts/Roboto-Regular.ttf'

<MenuImg@Image>:
    size_hint_x: None
    width: 60



# Larger Body Components #
#
# Confirmation Popup
<MenuPopup>:
    title_color: rgba(app.chef_bot_black)
    
    PopupBtn:
        text: 'Yes'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.6}
        on_press: app.ConfirmSel(self)

    PopupBtn:
        text: 'No'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.3}
        on_press: app.DeclineSel(self)

# Confirmation Pop for Mult Select
<MenuPopup_Mult>:
    title_color: rgba(app.chef_bot_black)
    
    PopupBtn:
        text: 'Yes'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.6}
        on_press: app.ConfirmMultSel(self)

    PopupBtn:
        text: 'No'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.3}
        on_press: app.DeclineSel(self)

# Cancel Message
<MenuPopup_Can>:
    id: PopupCan
    title_color: rgba(app.chef_bot_black)
    
    PopupBtn:
        text: 'Yes'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.6}
        on_press: app.stopOrder(self)
        on_release: root.dismissPopup(self)

    PopupBtn:
        text: 'No'
        size_hint: 0.6, 0.2
        pos_hint: {'x': 0.2, 'y': 0.3}
        on_press: app.DeclineSel(self)

# Top NavBar
<NavBar@GridLayout>:
    cols: 2
    size_hint: 1, None
    height: 60
    canvas:
        Color:
            rgb: rgba(app.chef_bot_black)
        Rectangle:
            pos: self.pos
            size: self.size

<NavBar_two>:
    cols: 2
    size_hint: 1, 0.13
    pos_hint: {'x': 1, 'top': 1}
    canvas:
        Color:
            rgb: rgba(app.chef_bot_black)
        Rectangle:
            pos: self.pos
            size: self.size

# Buttom App Footer
<FooterBar@GridLayout>:
    rows: 1
    size_hint: 1, None
    height: 50
    spacing: 10
    canvas:
        Color:
            rgb: rgba(app.chef_bot_black)
        Rectangle:
            pos: self.pos
            size: self.size
    #Label:
        #text: app.Status
        #color: rgba('FDFFFC')
        #pos_hint_x: 0.15
        #bold: True


# Panels #
# Panel to Make single selection
<OneSelectionPanel@GridLayout>:
    cols: 1
    padding: 50
    #spacing: 20
    size_hint: 0.5,  0.5
    canvas:
        Color:
            rgb: rgba('FDFFFC')
        Rectangle:
            pos: self.pos
            size: self.size

# Greeter Panel 
<GreeterPanel@GridLayout>:
    cols: 3
    padding: 100
    spacing: 30
    pos_hint: {'x': 0.5, 'y': 0.5}
    canvas:
        Color:
            rgb: rgba('FDFFFC')
        Rectangle:
            pos: self.pos
            size: self.size

# Greeter Panel 
<MultiPanel@GridLayout>:
    cols: 3
    padding: 100
    spacing: 30
    pos_hint: {'x': 0.5, 'y': 0.5}
    canvas:
        Color:
            rgb: rgba('FDFFFC')
        Rectangle:
            pos: self.pos
            size: self.size


# Screen 1
<GreeterScreen>:
    
    GridLayout:
        cols: 1
        rows: 4
        NavBar:
            Label:
                text: 'Chef Bots'
                font_name: 'fonts/Roboto-Regular.ttf'
                color: rgba('FDFFFC')
                pos_hint_x: 0.1
                bold: True

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.3
            spacing: 20
            canvas:
                Color:
                    rgb: rgba('FDFFFC')
                Rectangle:
                    pos: self.pos
                    size: self.size  
            MenuLabel:
                text: "Welcome to the collaborative robot!"
                font_size: 20
                size_hint: (1, None)
                height: 20
            
            MenuLabel:
                text: "Click an option to start"
                size_hint: (1, None)
                height: 15
                

        GreeterPanel:
            MenuButton2:
                id: T
                on_press: 
                    root.manager.transition.direction = "left"
                    root.manager.transition.duration = 1
                    root.manager.current = "screen_two"
                BtnStack:
                    MenuImg:
                        source: 'images/burger.png'
                    MenuLabel:
                        text: 'Individual Items'
                
            MenuButton2:
                id: L
                bold: True
                on_press: 
                    root.manager.transition.direction = "left"
                    root.manager.transition.duration = 1
                    root.manager.current = "screen_three"
                BtnStack:
                    MenuImg:
                        source: 'images/checklist.png'
                    MenuLabel:
                        text: 'Custom Selection'
                
            MenuButton2:
                id: L
                on_press: app.get_running_app().stop()
                BtnStack:
                    MenuImg:
                        source: 'images/exit.png'
                    MenuLabel:
                        text: 'Exit'
            
        FooterBar:

#
# Screen 2 
<OneSelectScreen>:
    id: Screen_one
    GridLayout:
        cols: 1
        rows: 3
        NavBar:
            Label:
                text: 'Individual Items'
                color: rgba('FDFFFC')
                pos_hint_x: 0.1
                bold: True
            GridLayout:
                rows: 1
                spacing: 10, 10
                padding: 10, 10
                size_hint: 1, 1
                HeaderButton:
                    text: 'Home'
                    on_press: 
                        root.manager.transition.direction = "right"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_one"
                
                HeaderButton:
                    text: 'Single'
                    on_press: 
                        root.manager.transition.direction = "left"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_two"

                HeaderButton:
                    text: 'Mult'
                    on_press: 
                        root.manager.transition.direction = "left"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_three"

                HeaderButton:
                    text: 'Exit'
                    on_press: app.get_running_app().stop()  
        
        # Main
        OneSelectionPanel:
            MenuLabel:
                text: "Welcome to the collaborative robot!"
                font_size: 20
                size_hint: (1, None)
                height: 20
            GridLayout:
                padding: 50
                spacing: 30
                cols: 3
                size_hint: 1,1
                MenuButton:
                    id: T
                    text: 'Plain'
                    on_press: app.Pressbtn(self)
                MenuButton:
                    id: L
                    text: 'Deluxe'
                    on_press: app.Pressbtn(self)
                MenuButton:
                    id: On
                    text: '-'
                    on_press: app.Pressbtn(self)
                MenuButton:
                    id: C
                    text: '--'
                    on_press: app.Pressbtn(self)
                MenuButton:
                    id: P
                    text: '--'
                    on_press: app.Pressbtn(self)
        FooterBar:

# Screen 3s
<MultSelectScreen>:
    GridLayout:
        cols: 1
        rows: 5
        NavBar:
            Label:
                text: 'Multi-Selection'
                color: rgba('FDFFFC')
                pos_hint_x: 0.1
                bold: True

            GridLayout:
                rows: 1
                spacing: 10, 10
                padding: 10, 10
                size_hint: 1, 1
                HeaderButton:
                    text: 'Home'
                    on_press: 
                        root.manager.transition.direction = "right"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_one"
                
                HeaderButton:
                    text: 'Single'
                    on_press: 
                        root.manager.transition.direction = "left"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_two"

                HeaderButton:
                    text: 'Mult'
                    on_press: 
                        root.manager.transition.direction = "left"
                        root.manager.transition.duration = 1
                        root.manager.current = "screen_three"

                HeaderButton:
                    text: 'Exit'
                    on_press: app.get_running_app().stop()  

        
        #
        #
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.2
            spacing: 20
            canvas:
                Color:
                    rgb: rgba('FDFFFC')
                Rectangle:
                    pos: self.pos
                    size: self.size  
            MenuLabel:
                text: "Select the ingredients to apply"
                size_hint: 0.5, 0.5
                pos_hint: {'right': 0.75, 'top':0} 
                #color: 0,0,0,1
            

        GridLayout:
            cols: 6
            spacing: 10, 10
            size_hint: 0.6, 0.5
            padding: 70
            canvas:
                Color:
                    rgb: rgba(app.chef_bot_light)
                Rectangle:
                    pos: self.pos
                    size: self.size  

            MenuLabel:
                text: app.tomatoes

            MenuCheckBox:
                text: app.tomatoes
                on_state: app.itemSelect(self.text, self.state)

            MenuLabel:
                text: app.lettuce

            MenuCheckBox:
                text: app.lettuce
                on_state: app.itemSelect(self.text, self.state)

            MenuLabel:
                text: app.pickles

            MenuCheckBox:
                text: app.pickles
                on_state: app.itemSelect(self.text, self.state)
            MenuLabel:
                text: app.cheese

            MenuCheckBox:
                text: app.cheese
                on_state: app.itemSelect(self.text, self.state)

            MenuLabel:
                text: app.onions

            MenuCheckBox:
                text: app.onions
                on_state: app.itemSelect(self.text, self.state)
        
        # B
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            size_hint: 1, 0.1
            canvas:
                Color:
                    rgb: rgba(app.chef_bot_light)
                Rectangle:
                    pos: self.pos
                    size: self.size  
            MenuButton2:
                text: "Submit"
                size_hint_x: 0.2, 0.2
                pos_hint: {'y': 0, 'right': 0.6} 
                on_press: app.Submitbtn(self)


            
        FooterBar:
            CancelBtn:
                id: cbtn
                text: 'Cancel'
            
                
                
